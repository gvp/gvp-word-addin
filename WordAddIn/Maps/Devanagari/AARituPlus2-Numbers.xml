<?xml version="1.0" encoding="UTF-8"?>
<mapping xsi:noNamespaceSchemaLocation="..\Mapping.xsd"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xi="http://www.w3.org/2001/XInclude">

  <!-- This is needed to support TTF/OTF fonts that were generated from Type 1 font -->
  <xi:include href="UnicodeToCP1252.xml"/>

  <!-- Overriding numbers -->
  <mapping name="Devanagari Numbers">
    <entry from="0" to="०" />
    <entry from="1" to="१" />
    <entry from="2" to="२" />
    <entry from="3" to="३" />
    <entry from="4" to="४" />
    <entry from="5" to="५" />
    <entry from="6" to="६" />
    <entry from="7" to="७" />
    <entry from="8" to="८" />
    <entry from="9" to="९" />
  </mapping>
  <mapping name="Arabic Numbers">
    <entry from="&#x8C;" to="0" />
    <entry from="&#x83;" to="1" />
    <entry from="&#x84;" to="2" />
    <entry from="&#x85;" to="3" />
    <entry from="&#x86;" to="4" />
    <entry from="&#x87;" to="5" />
    <entry from="&#x88;" to="6" />
    <entry from="&#x89;" to="7" />
    <entry from="&#x8A;" to="8" />
    <entry from="&#x8B;" to="9" />
  </mapping>

  <xi:include href="AARituPlus2.Common.xml"/>
</mapping>
